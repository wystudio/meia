<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle" >@style/MainActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/MainActionButtonOverflow</item>
        <item name="android:background">@drawable/mm_trans</item>
    </style>
    <style name="MainActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/actionbar_add_icon</item>
    </style>
    
    <style name="MainActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">#CCCCCC</item>
        <item name="android:titleTextStyle">@style/MainActionBar_titleStyle</item>
    </style>
    <style name="MainActionBar_titleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
